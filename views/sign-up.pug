doctype html
html
  head
    title Maximum
    meta(property="og:title" content="Maximum")
    meta(property="og:image" content="https://maximum-front-end.herokuapp.com/images/resources/maximum.png")
    meta(property="og:url" content="https://maximum-front-end.herokuapp.com/")
    meta(property="og:description" content="Maximum is a Medium.com which allows users to sign-up, follow other user's stories and 'clap' their content. Users can post comments on individual stories and edit their profiles.")
    link(rel='stylesheet' type='text/css' href='/styles/style.css')
    link(rel="stylesheet" href="../styles/log-in.css")
    link(rel="icon" href="/images/resources/favicon.ico" type="image/x-icon")
  body
    div(class="background-image")
      img#background(src="../images/resources/log-in-background.jpg")
      div(class="splash-container")
        img#splash(src="../images/resources/splash-logo.png")
      div(class="log-in-container")
        div(class="log-in-content")
          div(class="errors-container")
          h2 Sign Up
          form(class="sign-up-form")
            div(class="forms")
              .form-group
                label(for='name') Name
                input#username.form-control(type='text' name='name' placeholder="Name")
              include includes/auth-form-fields
            div(class="buttons")
              button.btn.btn-primary(type='submit') Sign Up
            a(href='/log-in') Already have an account? Log in here.
    script(type="module" src="../scripts/sign-up.js")
